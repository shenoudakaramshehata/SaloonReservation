@page
@model SaloonReservation.Areas.Admin.Pages.Configurations.ManageArea.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";

}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

<style>
    .dataTables_filter {
        display: none;
    }
</style>



<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" id="txtSearch"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add Area"]
                            </button>

                        </div>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>

                                    <th data-ordering="false">@sharedResource["Area Arabic Title"]</th>
                                    <th data-ordering="false">@sharedResource["Area English Title"]</th>
                                    <th data-ordering="false">@sharedResource["City Arabic Title"]</th>
                                    <th data-ordering="false">@sharedResource["City English Title"]</th>
                                    <th data-ordering="false">@sharedResource["Sort"]</th>
                                    <th data-ordering="false">@sharedResource["Is Active"]</th>
                                    <th data-ordering="false">@sharedResource["Actions"]</th>

                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>
<partial name="_AddPopup" model="@Model.Newarea" view-data="ViewData" />
<partial name="_EditPopup" model="@Model.Newarea" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.Newarea" view-data="ViewData" />
<partial name="_DatchDelete" model="@Model.Newarea" view-data="ViewData" />

<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>




<script>

    $(document).ready(function () {
        var domainUrl = document.getElementById("UrlId").value;
        console.log("domainUrl: " + domainUrl);
        $('#myTable').DataTable({
            "dom": 'rt<"bottom"ip><"clear">',
            ajax: { url: domainUrl + '/api/Lists/GetAllAreas' },
            columns: [

                { data: 'AreaTlAr' },
                { data: 'AreaTlEn' },
                { data: 'CityTlAr' },
                { data: 'CityTlEn' },
                { data: 'AreaOrderIndex' },

                {
                    data: "AreaIsActive",

                },
                {
                    data: "AreaId",
                    render: function (data, type, row) {
                        console.log("Data");
                        console.log(data);
                        return '<ul class="list-inline hstack gap-2 mb-0"> <li class="list-inline-item" data-bs-toggle="tooltip"data-bs-trigger="hover" data-bs-placement="top"title="View"><a href="javascript:void(0)" data-bs-toggle="modal"><i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(' + data + ')" ></i></a></li> <li class="list-inline-item" data-bs-toggle="tooltip"data-bs-trigger="hover" data-bs-placement="top"title="Edit" ><a class="edit-item-btn" href="javascript:void(0)"data-bs-toggle="modal" > <i class="ri-pencil-fill align-bottom text-muted" onclick="ShowEditPopUp(' + data + ')"></i> </a> </li>    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top"title="Delete"> <a class="remove-item-btn" data-bs-toggle="modal"href="javascript:void(0)" > <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteArea(' + data + ')"></i> </a></li></ul>';


                    },
                    className: "dt-body-center"
                },


            ],



        });
    });






    $('#txtSearch').keyup(function () {
        var table = $('#myTable').DataTable();
        table.search($(this).val()).draw();
    });


    function ShowEditPopUp(AreaId) {
        console.log(AreaId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/ManageArea/Index?handler=SingleAreaForEdit",

            data: { "AreaId": AreaId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("EditAreaId").value = response.AreaId
                document.getElementById("AreaTlEnId").value = response.AreaTlEn
                document.getElementById("AreaTlArId").value = response.AreaTlAr
                document.getElementById("AreaOrderIndexId").value = response.AreaOrderIndex
                document.getElementById("SelectedCityId").value = response.CityId

                if (response.AreaIsActive) {
                    document.getElementById("AreaIsActiveId").checked = true;

                }
                else {
                    document.getElementById("AreaIsActiveId").checked = false;

                }


                $('#showEditModal').modal('show');
            },

            failure: function (response) {
                alert(response);
            }
        });
    }

    function ShowViewPopUp(AreaId) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageArea/Index?handler=SingleAreaForView",
            data: { "AreaId": AreaId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("DAreaTlArId").innerHTML = response.AreaTlAr
                document.getElementById("DAreaTlEnId").innerHTML = response.AreaTlEn
                document.getElementById("DCityTlArId").innerHTML = response.CityTlAr
                document.getElementById("DCityTlEnId").innerHTML = response.CityTlEn
                document.getElementById("DCountryTlEnId").innerHTML = response.CountryTlEn
                document.getElementById("DCountryTlArId").innerHTML = response.CountryTlAr
                document.getElementById("DAreaOrderIndexId").innerHTML = response.AreaOrderIndex
                if (response.AreaIsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = "Active"

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = "Not Active"
                }

                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }

    function deleteArea(AreaId) {
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageArea/Index?handler=SingleAreaForDelete",
            data: { "AreaId": AreaId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                console.log(response.AreaId);
                document.getElementById("DeleteAreaId").value = response.AreaId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }


</script>      