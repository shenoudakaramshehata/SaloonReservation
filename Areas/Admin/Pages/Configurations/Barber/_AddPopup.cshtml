@using SaloonReservation.Data
@inject SalonContext _context
@{
   var offdays = _context.WeekDays.Select(e => new { e.WeekDayId, e.WeekDayTitle });
}


@model SaloonReservation.Models.Barber

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add New Barber"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Admin" asp-page="/Barber/Index" asp-page-handler="AddBarberItem" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <div class="col-lg-12">
                            <div class="text-center col-lg-12">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute bottom-0 end-0">
                                        <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title="Select Image">
                                            <div class="avatar-xs cursor-pointer">
                                                <div class="avatar-title bg-light border rounded-circle text-muted">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                               accept="image/*" required>
                                    </div>
                                    <div class="avatar-lg p-1">
                                        <div class="avatar-title bg-light rounded-circle">
                                            <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                        </div>
                                    </div>
                                </div>
                                <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.FullName" class="form-label">@(sharedResource["FullName"])</label>
                                <input type="text" asp-for="@Model.FullName" class="form-control" placeholder="@sharedResource["Enter FullName"]" required />
                                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.Phone" class="form-label">@sharedResource["Phone"]</label>
                                <input type="text" asp-for="@Model.Phone" class="form-control" placeholder="@sharedResource["Enter Phone"]" required />
                                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.Email" class="form-label">@(sharedResource["Email"])</label>
                                <input type="text" asp-for="@Model.Email" class="form-control" placeholder="@sharedResource["Enter Eamil"]" required />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.Password" class="form-label">@(sharedResource["Password"])</label>
                                <input type="password" asp-for="@Model.Password" class="form-control" placeholder="@sharedResource["Enter Password"]" required />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.Description" class="form-label">@sharedResource["Description"]</label>
                                <textarea cols="2" data-val="true" data-val-required="@sharedResource["Please enter description"]" asp-for="@Model.Description" class="form-control" placeholder="@sharedResource["Enter Description"]" required></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>

                        
                        

                        <div class="col-lg-12">
                            <label asp-for="@Model.OffWeekDayId" for="car-rental-name">@sharedResource["offday"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Please choose a offday"]" id="catId" asp-for="@Model.OffWeekDayId" class="form-select required" aria-label="Default select example" required>
                                <option selected value="Select Type">@sharedResource["Select offday"]</option>
                                   
                                    @{
                                    if (@offdays != null)
                                    {
                                        foreach (var item in @offdays)

                                            {

                                                <option value="@item.WeekDayId">@item.WeekDayTitle</option>

                                            }
                                       }
                                    }

                            </select>

                            <span asp-validation-for="@Model.OffWeekDayId" class="text-alert"></span>
                         </div>


                        <div class="col-md-12 form-group">
                            <input type="hidden" id="inputCounter" name="inputCounter" value="0">

                            <label for="formFile" class="form-label">@sharedResource["Adding Others Images For Item"]</label>
                            <button type="button" class="btn btn-secondary" id="addImageBtn">@sharedResource["Add Image"]</button>
                            <div id="imageInputs" class="mt-2"></div>
                        </div>

                     
          
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" id="default">
                                <label for="@Model.IsActive" class="form-check-label" >@sharedResource["Active"]</label>
                                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                 
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button type="submit" asp-page="Index" asp-page-handler="AddBarberItem" class="btn btn-success" id="add-btn">@sharedResource["Add"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    let inputCounter = 0;

    // Add a click event listener to the "Add Image" button
    document.getElementById('addImageBtn').addEventListener('click', function () {
        // Increment the counter
        inputCounter++;
        document.getElementById('inputCounter').value = inputCounter;

        // Create a new file input element
        const fileInput = document.createElement('input');
        fileInput.type = 'file';
        //fileInput.name = `formFiles[${inputCounter}]`;
        fileInput.name = 'formFiles';

        fileInput.className = 'form-control mt-2';
        //fileInput.setAttribute('multiple', '');

        // Create a new textarea element
        const textarea = document.createElement('textarea');
        textarea.className = 'form-control mt-2';
        textarea.cols = 2;
        textarea.name = 'ImageDescription';
        textarea.placeholder = 'Image Description';

        // Append the new elements to the container
        document.getElementById('imageInputs').appendChild(fileInput);
        document.getElementById('imageInputs').appendChild(textarea);
    });
</script>