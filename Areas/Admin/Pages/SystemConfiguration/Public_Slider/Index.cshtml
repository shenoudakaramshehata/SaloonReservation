<partial name="_EditPopup" model="@Model.publicSlider" view-data=" ViewData" />



@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
}

<script>


    function editButtonClick(PublicSliderId) {


        console.log(PublicSliderId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/SystemConfiguration/Public_Slider/Index?handler=SinglePublicSliderForEdit",

            data: { "PublicSliderId": PublicSliderId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {


                document.getElementById("PublicSliderHiddenId").value = response.PublicSliderId
                document.getElementById('BackgroundId').src = "/" + response.Background
                document.getElementById('BackImage').src = "/" + response.Background
                document.getElementById('BackgroundForEdit').value = response.Background
                document.getElementById("Title1ArId").value = response.Title1Ar
                document.getElementById("Title1EnId").value = response.Title1En
                document.getElementById("Title2EnId").value = response.Title2En
                document.getElementById("Title2ArId").value = response.Title2Ar
                document.getElementById("DescriptionArId").value = response.DescriptionAr
                document.getElementById("DescriptionEnId").value = response.DescriptionEn

                if (response.IsImage) {
                    document.getElementById("IsImageId").checked = true;
                    document.getElementById("ImgId").style.display = "block";
                    document.getElementById("videoId").style.display = "none";
                }
                else {
                    document.getElementById("IsImageId").checked = false;
                    document.getElementById("ImgId").style.display = "none";
                    document.getElementById("videoId").style.display = "block";
                }
                
                


                $('#showEditModal').modal('show');

            },

            failure: function (response) {
                alert(response);
            }
        });
    }


    

</script>
