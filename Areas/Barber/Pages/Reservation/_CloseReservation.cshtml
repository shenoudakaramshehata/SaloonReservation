
<div class="modal fade zoomIn" id="CloseModal" tabindex="-1"
     aria-labelledby="deleteRecordLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Confirm Close Reservation"] </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="btn-close"></button>
            </div>
            <div class="modal-body p-5 text-center">
               
                <div class="mt-4 text-center">


                    <h4 class="fs-semibold">@sharedResource["Are you sure you want to Close This Reservation?"]</h4>
                    <p class="text-muted fs-14 mb-4 pt-1">
                    </p>
                    <div class="hstack gap-2 justify-content-center remove">

                        <form method="post" enctype="multipart/form-data" asp-area="Barber" asp-page="/Reservation/ReservationDetails" asp-page-handler="CloseReservation">

                            <button class="btn btn-success" type="submit">
                                @sharedResource["Close Reservation"]

                            </button>
                        </form>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>