<div class="modal fade" id="CancelModal" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">Cancel Reservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="close-modal"></button>
            </div>
            <form method="post" enctype="multipart/form-data" asp-area="Barber" asp-page="/Reservation/ReservationDetails" asp-page-handler="CancelReservation">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-12">
                    <div>
                        <label class="form-label">@sharedResource["Remarks"]</label>
                        <textarea name="CancleRemarks" required class="form-control" cols="4" placeholder="@sharedResource["If You Want To Cancel Reservation Please Give aReason"]"></textarea>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="@sharedResource["Cancel Reservation"]" class="btn btn-danger" />
                </div>
            </form>

            
        </div>
    </div>
</div>














