<div role="main" class="main shop pb-4">

    <div class="container" style="padding-top: 8rem;">

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <ul class="breadcrumb breadcrumb-dividers-no-opacity font-weight-bold text-6 justify-content-center my-5">
                    <li class="text-transform-none me-2">
                        <a class="text-decoration-none text-color-primary text-color-hover-primary">@sharedResource["Barbers"]</a>
                    </li>
                    <li class="text-transform-none me-2">
                        <a class="text-decoration-none text-color-dark text-color-hover-primary">@sharedResource["Services"]</a>
                    </li>
                    <li class="text-transform-none text-color-dark me-2">
                        <a class="text-decoration-none text-color-dark text-color-hover-primary">@sharedResource["Schedule"]</a>
                    </li>
                    <li class="text-transform-none text-color-dark me-2">
                        <a class="text-decoration-none text-color-dark text-color-hover-primary">@sharedResource["User Info"]</a>
                    </li>
                    <li class="text-transform-none text-color-dark">
                        <a class="text-decoration-none text-color-dark">@sharedResource["Preview"]</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container py-4">

            @{
                if (Model.Barbers != null)
                {
                    <div class="sort-destination-loader mt-4 pt-2 sort-destination-loader-loaded">

                        <div class="row team-list sort-destination" data-sort-id="team" data-filter="*" style="position: relative; height: 650px;">

                            @foreach (var item in Model.Barbers)
                            {
                                <div class="col-12 col-sm-6 col-lg-3 isotope-item leadership">
                                    <span class="thumb-info thumb-info-hide-wrapper-bg mb-4">
                                        <span class="thumb-info-wrapper">
                                            <a href="/AppoimentServices?BarberId=@item.BarberId">
                                                <img src="@item.Image" style="height:11rem;" class="img-fluid" alt="">
                                                <span class="thumb-info-title">
                                                    <span class="thumb-info-inner">@item.FullName</span>

                                                </span>
                                            </a>
                                        </span>
                                        <span class="thumb-info-caption">
                                            <span class="thumb-info-caption-text text-container">@item.Description</span>
                                            <span class="thumb-info mb-4">
                                                <a href="/AppoimentServices?BarberId=@item.BarberId" class="btn btn-primary">@sharedResource["Make Appointment"]</a>
                                            </span>
                                        </span>
                                    </span>
                                </div>



                            }
                        </div>

                        <div class="bounce-loader"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div>
                    </div>
                }
            }


        </div>

    </div>

</div>

