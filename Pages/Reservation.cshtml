<div style="height:280px; width: 700px;overflow:scroll;border: 1px solid #ddd;">
    <div class="days">
        @{
            if (Model.dayTimeSLot != null)
            {
                foreach (var item in Model.dayTimeSLot)
                {

                    //DateTime dateTime = DateTime.ParseExact(@item.Date.ToString(), "M/d/yyyy h:mm:ss tt", null);

                    //// Convert to "August 23"
                    //string formattedDate = dateTime.ToString("MMMM d", System.Globalization.CultureInfo.InvariantCulture);
                    string formattedDate = @item.Date.ToString();


                    <div class="day">
                        <div class="datelabel" style="text-align:center!important"><strong>@item.Date.DayOfWeek.ToString()</strong><br />@formattedDate</div>
                        @{
                            foreach (var timeSlot in item.slotsLists)
                            {
                                <div class="timeslot"> @timeSlot.From:@timeSlot.To</div>
                            }
                        }


                    </div>
                }

            }
        }
    </div>
</div>
