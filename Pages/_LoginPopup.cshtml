@{
    var locale = Context.Features.Get<IRequestCultureFeature>();

    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
}
@model SaloonReservation.ViewModels.LoginVM

<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">

		<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="formModalLabel">Log in to continue</h4>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">×</button>
			</div>
			<div class="modal-body">
                <form id="frmSignIn" asp-page="/Index" asp-page-handler="Login" class="needs-validation" novalidate="novalidate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        @{
                            if (@BrowserCulture == "en-US")
                            {
                                <div class="form-group col">
                                    <label asp-for="@Model.Email" style="translate: none; rotate: none; scale: none; transform-origin: 558px 21px 0px; transform: translate(0px); opacity: 1;" class="form-label">E-mail Address</label>
                                    <input type="text" asp-for="@Model.Email" class="form-control form-control-lg" required="">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <div style="text-align:right" class="form-group col">
                                    <label asp-for="@Model.Email" style="translate: none; rotate: none; scale: none; transform-origin: 558px 21px 0px; transform: translate(0px); opacity: 1;" class="form-label">@sharedResource["E-mail Address"]</label>
                                    <input type="text" asp-for="@Model.Email" class="form-control form-control-lg" required="">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>

                            }
                        }

                    </div>
                    <div class="row">
                        @{
                            if (@BrowserCulture == "en-US")
                            {
                                <div class="form-group col">
                                    @*<a class="float-end" href="#">(Lost Password?)</a>*@
                                    <label for="@Model.Password" class="form-label">@sharedResource["Password"]</label>
                                    <input type="password" asp-for="@Model.Password" value="" class="form-control form-control-lg" required="">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>

                                    </div>
                            }
                            else
                            {
                                <div style="text-align:right" class="form-group col">
                                    @*<a class="float-end" href="#">(Lost Password?)</a>*@
                                    <label for="@Model.Password" class="form-label">@sharedResource["Password"]</label>
                                    <input type="password" asp-for="@Model.Password" value="" class="form-control form-control-lg" required="">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>

                                </div>



                            }
                        }

                    </div>
                    <div class="row">
                        @{
                            if (@BrowserCulture == "en-US")
                            {
                                <div class="form-group col-lg-6">
                                    <div class="custom-control custom-checkbox">
                                        <input  type="checkbox" asp-for="@Model.RememberMe" class="custom-control-input" id="rememberme">
                                        <label for="rememberme" class="custom-control-label text-2">@sharedResource["Remember Me"]</label>
                                        <span asp-validation-for="@Model.RememberMe" class="text-danger"></span>

                                        </div>
                                </div>
                            }
                            else
                            {
                                <div style="text-align:right" class="form-group col-lg-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" asp-for="@Model.RememberMe" class="custom-control-input" id="rememberme">
                                        <label for="rememberme" class="custom-control-label text-2">@sharedResource["Remember Me"]</label>
                                        <span asp-validation-for="@Model.RememberMe" class="text-danger"></span>

                                        </div>
                                </div>


                            }
                        }


                        <div class="form-group col-lg-6">
                            @{
                                if (@BrowserCulture == "en-US")
                                {
                                    <input type="submit" value=@sharedResource["Login"] class="btn btn-primary btn-modern float-end" data-loading-text="Loading...">

                                }
                                else
                                {
                                    <input type="submit" value=@sharedResource["Login"] class="btn btn-primary btn-modern" data-loading-text="Loading...">

                                }
                            }
                        </div>
                        <div class="form-group col-lg-12">
                            @{
                                if (@BrowserCulture == "en-US")
                                {
                                    <h4 style="color: #777;">@sharedResource["Didn't have any account?"] <a style="color: #d24143;" href="/Register">@sharedResource["Sign Up"]</a></h4>


                                }
                                else
                                {
                                    <h4 style="text-align:right;color: #777;">@sharedResource["Didn't have any account?"] <a style="color: #d24143;" href="/Register">@sharedResource["Sign Up"]</a></h4>

                                }
                            }
                        </div>
                    </div>
                </form>

