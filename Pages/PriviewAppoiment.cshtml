<div role="main" class="main shop pb-4">

	<div class="container" style="padding-top: 8rem;">

		<div class="row justify-content-center">
			<div class="col-lg-8">
				<ul class="breadcrumb breadcrumb-dividers-no-opacity font-weight-bold text-6 justify-content-center my-5">
					<li class="text-transform-none me-2">
						<a style="color: #d65831 " class="text-decoration-none">@sharedResource["Barbers"]</a>
					</li>
					<li class="text-transform-none me-2">
						<a style="color: #d65831 " class="text-decoration-none">@sharedResource["Services"]</a>
					</li>
					<li class="text-transform-none me-2">
						<a style="color: #d65831 " class="text-decoration-none ">@sharedResource["Schedule"]</a>
					</li>
					<li class="text-transform-none me-2">
						<a style="color: #d65831 " class="text-decoration-none">@sharedResource["User Info"]</a>
					</li>
					<li class="text-transform-none">
						<a style="color: #d65831 " class="text-decoration-none">@sharedResource["Preview"]</a>
					</li>
				</ul>
			</div>
		</div>
	
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="card border-width-3 border-radius-0 border-color-success">
					<div class="card-body text-center">
						<p class="text-color-dark font-weight-bold text-4-5 mb-0">
							@sharedResource["Details of the Reservation"]
						</p>
					</div>
				</div>
				@{
					if (@Model.TemporaryAppoiment!=null){
						var dayOfDate = CultureInfo.CurrentCulture.DateTimeFormat.GetDayName(Model.TemporaryAppoiment.AppointmentCreateDate.DayOfWeek);

						<div class="d-flex flex-column flex-md-row justify-content-between py-3 px-4 my-4">
							<div class="text-center">
								<span>
									@sharedResource["Date"] <br>
									<strong class="text-color-dark">@Model.AppoimentDate</strong>
								</span>
							</div>
							<div class="text-center mt-4 mt-md-0">
								
								
								<span>
									@sharedResource["Day"] <br>
									<strong class="text-color-dark">@dayOfDate</strong>
									<strong class="text-color-dark"></strong>
								</span>
							</div>
							<div class="text-center mt-4 mt-md-0">
								<span>
									@sharedResource["From"] <br>
									<strong class="text-color-dark">@Model.TemporaryAppoiment.AppointmentStartDate.ToShortTimeString()</strong>
								</span>
							</div>
							<div class="text-center mt-4 mt-md-0">
								<span>
									@sharedResource["To"] <br>
									<strong class="text-color-dark">@Model.TemporaryAppoiment.AppointmentEndDate.ToShortTimeString()</strong>
								</span>
							</div>
							<div class="text-center mt-4 mt-md-0">
								<span>
									@sharedResource["Barber"] <br>
									<strong class="text-color-dark">@Model.BarberName </strong>
								</span>
							</div>
							<div class="text-center mt-4 mt-md-0">
								@if (@Model.BrowserCulture == "en-US")
								{

									<span>
										@sharedResource["Total Amount"]
										<br>

										<strong class="text-color-dark">@Model.TemporaryAppoiment.TotalAmount Kd</strong>

									</span>



								}

								else
								{
									<span>
										@sharedResource["Total Amount"]
										<br>

										<strong class="text-color-dark">@Model.TemporaryAppoiment.TotalAmount دينار</strong>

									</span>

								}
								
							</div>
						</div>
					}
				}

				<div class="card border-width-3 border-radius-0 border-color-hover-dark mb-4">
					<div class="card-body">
						<h4 class="font-weight-bold text-uppercase text-4 mb-3">@sharedResource["Appointment Details"]</h4>
						<table class="shop_table cart-totals mb-0">
							<tbody>
								<tr>
									<td colspan="2" class="border-top-0">
										<strong class="text-color-dark">@sharedResource["Services"]</strong>
									</td>
								</tr>
								@{
									if (@Model.TemporaryAppoiment != null)
									{
										if (@Model.TemporaryAppoiment.TemporaryAppointmentServices != null)
										{
											foreach (var item in @Model.TemporaryAppoiment.TemporaryAppointmentServices)
											{
												var service = _context.Services.Where(e => e.ServiceId == item.ServiceId).FirstOrDefault();
												var Duration = item.NumberOfKids * service.Duration;
												@if (@Model.BrowserCulture == "en-US")
												{


													<tr>
														<td>
															<strong class="d-block text-color-dark line-height-1 font-weight-semibold">
																@service.serviceTlEn
															</strong>
															<span class="text-1">@Duration Hours</span>
														</td>
														<td class="text-end align-top">
															<span class="amount font-weight-medium text-color-grey">@item.Amount Kd</span>
														</td>
													</tr>
												}

												else
												{

													<tr>
														<td>
															<strong class="d-block text-color-dark line-height-1 font-weight-semibold">
																@service.serviceTlAr
															</strong>
															<span class="text-1">@Duration ساعة</span>
														</td>
														<td class="text-end align-top">
															<span class="amount font-weight-medium text-color-grey">@item.Amount دينار</span>
														</td>
													</tr>
												}
												
											}
										}
									
								
							
						
								<tr class="total">
									<td>
												<strong class="text-3-5">@sharedResource["Total Amount"]</strong>
									</td>
											@if (@Model.BrowserCulture == "en-US")
											{


												<td class="text-end">
													<strong><span style="color:#d65831 ;" class="amount text-5">@Model.TemporaryAppoiment.TotalAmount Kd</span></strong>
												</td>

											}

											else
											{
												<td class="text-end">
													<strong><span style="color:#d65831 ;" class="amount  text-5">@Model.TemporaryAppoiment.TotalAmount دينار</span></strong>
												</td>
											}

									
								</tr>
									}
								}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row justify-content-between mx-0">
					@*<div class="col-md-auto px-0 mb-3 mb-md-0">
					<div class="d-flex align-items-center">
					<button type="submit" class="btn btn-light btn-modern text-color-dark bg-color-light-scale-2 text-color-hover-light bg-color-hover-primary text-uppercase text-3 font-weight-bold border-0 border-radius-0 ws-nowrap btn-px-4 py-3 ms-2">Add New Service</button>
					</div>
					</div>*@
					<form method="post">

						<input hidden name="appointmentId" value="@Model.AppointmentId" />
					<div class="col-md-auto px-0">
							<button style="background:#d65831 ;color:#fff" type="submit" class="btn  btn-modern" data-loading-text="Loading...">
								@sharedResource["Go To Pay"]
								@if (@Model.BrowserCulture == "en-US")
								{


									<i class="fas fa-arrow-right ms-2"></i>

								}

								else
								{
									<i class="fas fa-arrow-left ms-2"></i>
								}
								
						</button>
					</div>
					</form>
				</div>
			
			</div>
		</div>

	</div>

