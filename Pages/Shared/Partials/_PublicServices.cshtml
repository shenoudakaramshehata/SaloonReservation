@using Microsoft.AspNetCore.Localization;
@using SaloonReservation.Data
@using SaloonReservation.Models;
@inject SalonContext _context
@{
    var locale = Context.Features.Get<IRequestCultureFeature>();

    var BrowserCulture = locale.RequestCulture.UICulture.ToString(); 
    List<Service> services = _context.Services.ToList();

}


<div id="ourservices" class="container py-5 my-5">
    <div class="row mt-4 mb-5">
        <div class="col text-center text-md-start">
            <div class="overflow-hidden mb-1">
                <h2 class="text-color-primary font-weight-bold text-7 negative-ls-05 custom-side-dots custom-side-dots-rm-right mb-0 appear-animation animated maskUp appear-animation-visible" data-appear-animation="maskUp" style="animation-delay: 100ms;">OUR SERVICES</h2>
            </div>
            <div class="overflow-hidden mb-3">
                <p class="font-weight-semibold text-3 mb-0 appear-animation animated maskUp appear-animation-visible" data-appear-animation="maskUp" data-appear-animation-delay="200" style="animation-delay: 200ms;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. </p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        @{
            if (services is not null)
            {
                foreach(var service in services)
                {
                    <div class="col-md-4 text-center mb-md-5">
                        <img src="img/demos/barber/icons/scissors.png" class="img-fluid mb-3" alt="">
                        @if (BrowserCulture == "en-Us")
                        {
                            <h2 class="font-weight-semibold text-5 line-height-3 mb-3">@service.serviceTlEn</h2>

                        }else
                        {
                            <h2 class="font-weight-semibold text-5 line-height-3 mb-3">@service.serviceTlAr</h2>

                        }
                        <p class="px-4">@service.Duration</p>
                    </div>
                }
                
            }
        }
       
         </div>
</div>